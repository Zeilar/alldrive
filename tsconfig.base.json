{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@alldrive/config": ["libs/config/src/index.ts"],
      "@alldrive/dtos": ["libs/dtos/src/index.ts"]
    }
  },
  "include": ["types/env.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
